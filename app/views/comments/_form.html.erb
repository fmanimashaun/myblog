<%= form_for [@user, @post, comment], url: user_post_comments_path(@user, @post), method: :post, class: "border-2 border-black p-4" do |f| %>
  <div class="flex flex-col space-y-2">
    <%= f.label :Comment, class: 'block text-sm font-medium' %>
    <%=
      f.text_area :text,
                  class:
                    'mt-1 block w-full rounded-md border-2 border-black shadow-sm focus:border-black'
    %>
  </div>

  <div class="flex gap-5 mt-5">
    <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
    <%=
      f.submit 'Create Comment',
               class:
                 'w-1/2 no-underline m-0 border border-black shadow-black p-2 rounded hover:shadow-none'
    %>

    <%= link_to 'Back', user_post_path(@user, @post), class: "w-1/2 flex justify-center no-underline m-0 border border-black shadow-black p-2 rounded hover:shadow-none" %>
  </div>
<% end %>
