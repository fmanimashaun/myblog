<h1>Create New Post</h1>
<%= form_with model: current_user.posts.build, url:  user_posts_path(current_user) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>

  <%= f.label :text %>
  <%= f.text_area :text, required: true %>

  <%= f.submit 'Create Post', data: { disable_with: 'Creating...' } %>
<% end %>
