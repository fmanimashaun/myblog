<h1>All Posts Page</h1>
<div class="users-container">
  <div class="user-header">
    <!-- Display user photo, name, and number of posts -->
    <div class="image-container">
      <%= image_tag @user.photo, alt: "#{@user.name}'s photo" %>
    </div>
    <div class="user-info">
      <h2><%= @user.name %></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div>
    <ul>
      <% @posts.each do |post| %>
        <li>
          <div class="user-card left">
            <h3>
              <a href="posts/<%= post.id %>"><%= post.title %></a>
            </h3>
            <br />
            <p><%= post.text %></p>
            <div class="right">
              <span class="span-post"
                >Comments: <%= post.comments.count %></span>
              <span class="span-post">Likes: <%= post.likes.count %></span>
            </div>
          </div>
          <div class="user-card left">
            <ul>
              <h5>All the Comments:</h5>
              <br />
              <% post.recent_comments.each do |comment| %>
                <li><%= comment.user.name %>: <%= comment.text %></li>
              <% end %>
            </ul>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= paginate @posts, param_name: 'page', class: 'button' %>
